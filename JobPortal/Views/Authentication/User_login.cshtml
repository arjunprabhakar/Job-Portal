
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <link href="~/Content/ExternalStyle/login.css" rel="stylesheet" />

  
</head>
<body>
    <header>
        <div class="heading">
            <img class="logo" src="~/Content/images/logo.png" />
            <h4>Travel Guide</h4>
            <div class="items">
                <a href="index.html">Home</a>
                <a href="about.html">About us</a>
                <a href="Registration.html">Sign up</a>
            </div>
        </div>

    </header>

    <section style="text-align: center;margin-bottom: 40%;">
        <div class="container" id="aa">
            <div class="box" style="background-image: url('img/ae.png');">
                <div>
                    <h3 class="log">Sign in</h3>
                    <div>
                        @{
                            if (TempData["msg"] != null)
                            {
                                <script>alert('@TempData["msg"]')</script>
                            }
                        }



                        <form method="post" action="#" onsubmit="return validate()">
                            <div class="label">
                                <label>Username</label>
                            </div>
                            <div>
                                <input type="text" name="username" onkeyup="return validate()" onfocusout="return validate()">
                                <span id="email_error" style="color:red;"></span>
                            </div>
                            <div class="label">
                                <label>Password</label>
                            </div>
                            <div>
                                <input type="password" name="password" id="password" onblur="return passvalidation()" onKeyUp="return passvalidation()" onfocusout="return passvalidation()">
                                <span id="password_error" style="color:red;"></span>
                            </div>
                            <div>
                                <input type="submit" value="Sign in" style="width:100px;background-color:rgb(54, 217, 54);color:#fff;font-size:25px;">
                            </div>
                            <div style="margin-top:50px;display:inline-block;margin-left:-80px;">
                                <a href="#">Forgot Password</a>
                            </div>
                            <div style="margin-top:50px;display:inline-block;">
                                <a href="Registration.html">Create Account </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </section>

    <footer>
        <p>
            Copyright 1999-2023 by Refsnes Data. All Rights Reserved.
            Job portal is Powered by Job potal
        </p>
    </footer>

</body>
</html>