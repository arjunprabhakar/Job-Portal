
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <link href="~/Content/ExternalStyle/adminindex.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>

    <header>
        <div class="heading">
            <img class="logo" src="~/Content/images/logo.png" />
            <h4>Job Portal</h4>
            <div class="items">

            </div>
        </div>

    </header>
    <marquee width="100%" direction="right" height="100px" class="marquee">
        **** Jobseeker's ****
    </marquee>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-red w3-bar-block" style="width:20%;background-color:#5a5555;text-align: center;">
        <h3 style="color:#fff;font-weight:bold;">Admin Dashboard</h3><br><br>
        <a href="/Home/AdminIndex" class="w3-bar-item w3-button" style="color: #fff;font-size:20px;">Home</a><br>
        <a href="/Home/AdminAddJobs" class="w3-bar-item w3-button" style="color: #fff;font-size:20px;">Add Job</a><br>
        <a href="/Home/AdminViewJobs" class="w3-bar-item w3-button" style="color: #fff;font-size:20px;">View Job</a><br>
        <a href="/Home/AdminViewUsers" class="w3-bar-item w3-button" style="color: #fff;font-size:20px;">View Users</a><br>
        <a href="/Authentication/Logout" class="w3-bar-item w3-button" style="color: #fff;font-size:20px;margin-top:200px;font-weight:bold;">Logout</a><br>
    </div>

    <!-- Page Content -->
    <div style="margin-left:20%">
        <div class="w3-container">
            <div class="viewform">
                <table id="customers">
                    <thead>
                        <tr>
                            <th>Sl No.</th>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @{
                            foreach (System.Data.DataRow dr in ViewBag.user.Rows)
                            {
                                                <tr>
                                                    <td>@counter</td>
                                                    <td><img src="@Url.Content(dr["user_image"].ToString())" style="width:50px;height:50px;border-radius:5px;" /></td>
                                                    <td>@dr["firstname"] @dr["lastname"]</td>
                                                    <td>@dr["gender"]</td>
                                                    <td>@dr["email"]</td>
                                                    <td>@dr["phone"]</td>
                                                    <td>
                                                        <a href="/Home/AdminViewUsersDetails?id=@dr["id"]" style="color: #fff;text-decoration: none;font-weight:bold;">View </a>
                                                    </td>
                                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>

                @{
                    if (TempData["msg"] != null)
                    {
                        <script>alert('@TempData["msg"]')</script>
                    }
                }



            </div>
        </div>
    </div>
    <footer>
        <p>
            Copyright 1999-2023 -All Rights Reserved.
            Job Portal is Powered by Online Jobs
        </p>
    </footer>

</body>
</html>